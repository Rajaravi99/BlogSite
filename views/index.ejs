<html lang="en">
  <%- include("./partials/header.ejs") %>
<body>
  <%- include("./partials/nav.ejs") %>
</div>
  <div class="blogs content">
    <h2>All Blogs</h2>
    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <a class="single" href="/blogs/<%=blog._id%>">
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
            <p class="snippet"><p><b>Author's_Name</b></p><%= blog.author %></p>
        </a>

      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>

    <p>Total number of blogs on this site are: <%=blogs.length %></p>
  <%- include("./partials/footer.ejs") %>
     <script>
      let message='<%- message %>';
      if(message){
        alert(message);
      }
      </script>
</body>
</html>